def templateName = "helloworld"
pipeline {
    agent any
    triggers {
        pollSCM('*/30 * * * *')
    }
    stages {
        stage('Pull source code') {
            steps {
                echo "Pulling "
//                 git branch: 'master',url: 'https://github.com/maifujalam/openshift.git'
                echo "debug"
                sh "git branch"
                sh "pwd"
                sh "ls -al"
            }
        }
        stage("Cleanup"){
            steps{
                script{
                    openshift.withCluster(){
                        openshift.withProject(){
                        echo "Using project: ${openshift.project()} cluster: ${openshift.cluster()}"
                            if (openshift.selector("all", templateName).exists()) {
                                    echo "Cleaning ALL"
                                    openshift.selector("all", templateName).delete()
                            }
                            if (openshift.selector("dc", templateName).exists()) {
                                 echo "Cleaning deployment"
                                 openshift.selector("dc", templateName).delete()
                            }
                            if (openshift.selector("svc", templateName).exists()) {
                                echo "Cleaning servivet"
                                openshift.selector("scv", templateName).delete()
                            }
                        }
                    }
                }
            }
        }
//         stage('Build'){
//             steps{
//                 script{
//                     openshift.withCluster(){
//                         openshift.withProject(){
//                             echo "Using project: ${openshift.project()}"
//                             sh "oc version"
//                             sh "oc apply -f apps/HelloWorld/deployment/image-stream.yml"
//                             sh "oc apply -f apps/HelloWorld/deployment/docker-build.yml"
//                             openshiftBuild(buildConfig: 'helloworld',showBuildLogs: 'true')
//                         }
//                     }
//                 }
//             }
//         }
//         stage("Deploy"){
//             steps{
//                 script{
//                     openshift.withCluster(){
//                         openshift.withProject(){
//                             sh "oc apply -f apps/HelloWorld/deployment/deployment.yml"
// //                             openshiftDeploy(depCfg: 'helloworld')
//                         }
//                     }
//                 }
//             }
//         }
//         stage("Exposing"){
//             steps{
//                 script{
//                     openshift.withCluster(){
//                         openshift.withProject(){
//                             echo "Using project: ${openshift.project()}"
//                             sh "oc apply -f apps/HelloWorld/deployment/service.yml"
//                             sh "oc apply -f apps/HelloWorld/deployment/route.yml"
//                         }
//                     }
//                 }
//             }
//         }
    }
}
