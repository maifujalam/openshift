pipeline {
    agent any
    triggers {
        pollSCM('*/30 * * * *')
    }
    stages {
        stage('Pull source code') {
            steps {
                echo "Pulling "
                git branch: 'master',url: 'https://github.com/maifujalam/openshift.git'
                echo "debug"
                sh "git branch"
                sh "ls -al"
            }
        }
        stage('Build'){
            steps{
                script{
                    openshift.withCluster(){
                        openshift.withProject(){
                            echo "Using project: ${openshift.project()}"
                            sh "oc version"
                            sh "oc apply -f apps/HelloWorld/deployment/image-stream.yml"
                            sh "oc apply -f apps/HelloWorld/deployment/docker-build.yml"
                            openshiftBuild(buildConfig: 'helloworld',showBuildLogs: 'true')
                        }
                    }
                }
            }
        }
        stage("Deploy"){
            steps{
                    script{
                        openshift.withCluster(){
                            openshift.withProject(){
                                echo "Using project: ${openshift.project()}"
                                sh "oc apply -f apps/HelloWorld/deployment/deployment.yml"
                                openshiftDeploy(depCfg: 'helloworld')
                            }
                        }
                    }
                }
            }
    }
}
